DirectoryIndex index.php
RewriteEngine On

# Si on est Ã  la racine, rediriger vers public/
RewriteRule ^$ public/ [L]

# Pour tous les autres fichiers, les chercher d'abord dans public/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]

# Gestion des routes Laravel dans le dossier public
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^public/(.*)$ public/index.php [L]